generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  breakfast
  mainDishes
  drinks
  desserts
}

model MenuItem {
  id Int @id @default(autoincrement())
  name String 
  description String
  price Float
  image String
  category Category 
}

model PagesItem {
  id Int @id @default(autoincrement())
  title String
  data String
  image String
}